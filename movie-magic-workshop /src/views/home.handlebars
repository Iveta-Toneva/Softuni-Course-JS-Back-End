<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        {{#if isSearch}}
        <section id="search">
            <h1>Search</h1>
            <form method="GET" class="form">
                <input type="text" class="search" name="title" placeholder="Title..." value="{{query.title}}">
                <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{query.genre}}">
                <input type="number" name="year" class="year" placeholder="Year..." value="{{query.year}}">
                <input type="submit" value="search">
            </form>
        </section>
        {{/if}}
        {{#each movies}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{image}}" alt="Jungle-Cruise">
            </div>
            <div class="back">
                <h1>{{title}}</h1>
                <h2>Genre: {{genre}}</h2>
                <p>Description: {{description}}</p>
                <a href="movies/{{id}}" class="details">Details</a>
            </div>
        </div>
        {{else}}
        <p class="no-offer">There are no posts yet...</p>
        {{/each}}
    </div>
</section>